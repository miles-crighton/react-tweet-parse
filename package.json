{
  "name": "react-tweet-parser",
  "description": "Parse Twitter API tweet text into React components",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "version": "1.0.0",
  "license": "MIT",
  "keywords": [
    "Twitter",
    "Twitter API",
    "React",
    "Parser"
  ],
  "author": "Miles Crighton",
  "repository": {
    "type": "git",
    "url": "https://github.com/miles-crighton/react-tweet-parser"
  },
  "bugs": {
    "url": "https://github.com/miles-crighton/react-tweet-parser/issues"
  },
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.tsx\"",
    "lint": "eslint -c .eslintrc.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "twitter-d": "^0.4.0",
    "typescript": "^4.2.3"
  },
  "files": [
    "lib/**/*"
  ]
}
